<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FiapInvest.Views.LoginPage"
  BackgroundColor="Color.Transparent">
  <StackLayout Padding="25,25,25,25">
    <Label Text="FiapInvest" FontSize="40" HorizontalOptions="Center"/>
    <Label Text="" FontSize="30"/>
    <Label Text="Usuário: " FontSize="30"/>
    <Entry Placeholder="Digite o usuário" x:Name="Usuario" FontSize="20" />
    <Label Text="Senha: " FontSize="30"/>
    <Entry x:Name="Senha" Placeholder="******" IsPassword="True" FontSize="20" />
    <Label Text="" FontSize="30"/>
    <Button Text="Entrar" x:Name="BotaoLogin" WidthRequest="120"
              HorizontalOptions="Center" BackgroundColor="#000000"
              TextColor="#ffffff" HeightRequest="60" />
  </StackLayout>
</ContentPage>